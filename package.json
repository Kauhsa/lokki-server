{
    "name": "lokki-server",
    "version": "0.1.1",

    "dependencies": {
        "express": "3.x",
        "redis": "x",
        "easynexmo": "x",
        "nodetime": "x",
        "apn": "x",
        "gcm": "x",
        "mpns": "x",
        "knox": "0.8.x",
        "newrelic" : "x",
        "sendgrid": "0.4.x",
        "validator": "2.0.x",
        "node-uuid": "1.4.x",
        "memwatch": "x"
    },

    "devDependencies": {
        "nodeunit": "0.9.x",
        "nodeunit-httpclient": "0.2.x"
    },

    "eslintConfig": {
        "env": {
            "node": true
        },

        "rules": {
            "valid-jsdoc": 2,
            "no-eq-null": 2,
            "no-self-compare": 2,
            "no-void": 2,
            "no-warning-comments": 1,
            "brace-style": 2,
            "comma-style": 2,
            "no-multiple-empty-lines": 2,
            "no-lonely-if": 2,
            "no-nested-ternary": 2,
            "quotes": [2, "single"],
            "space-after-keywords": 2,
            "space-before-blocks": 2,
            "space-in-parens": 2,
            "spaced-line-comment": 2,
        }
    },

    "engines": {
        "node": "0.10.x",
        "npm": "1.2.x"
    }
}
